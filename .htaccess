RewriteEngine on

# Force SSL
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=302,L,NE]

# Force www
RewriteCond %{HTTP_HOST} !^$
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteCond %{HTTPS}s ^on(s)|
RewriteRule ^ http%1://www.%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Rewrite category URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^category/([0-9]+)-([^/]+)/?$ category.php?categoryId=$1 [QSA,L]

# Rewrite post URLs
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([0-9]+)-([^/]+)/?$ post.php?postId=$1 [QSA,L]

# Rewrite the shorteners URL
RewriteRule ^recommends/([A-Za-z0-9-]+)/?$ /redirect.php?redirect=$1 [L,QSA]